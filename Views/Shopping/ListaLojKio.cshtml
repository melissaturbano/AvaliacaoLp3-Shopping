@model List<AvaliacaoLp3_Shopping.ViewModels.LojaViewModel>
@{
    ViewData["Title"] = "Lista de lojas e kiosques";
}


@if(Model.Count == 0) 
{
    <p>Nenhuma loja disponível.</p>
}
else 
{
    <h1>Lojas e Kiosques</h1>
    <p>@Model.Count lojas disponíveis:</p>

    @*percorrendo e exibindo a lista*@
    @foreach(var loja in Model)
    {
        <h2>@loja.Nome</h2>
        <p>Piso: @loja.Piso</p>
        <hr>
    }
}


